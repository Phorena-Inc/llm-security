  "test_scenarios": [
    {
      "scenario": "confidential_off_hours_conflict",
      "user": "user123",
      "query": "What are the coordinates of Project Zeus?",
      "data_classification": "confidential",
      "mission_phase": "pre_deployment",
      "time_period": "off_hours",
      "user_clearance": "confidential",
      "expected_result": "blocked",
      "expected_reason": "Blocked due to OffHours restriction despite user clearance",
      "contradiction_type": "clearance_vs_time",
      "description": "User has clearance but off-hours restriction blocks access"
    },
    {
      "scenario": "secret_working_hours_allow",
      "user": "user123",
      "query": "Show me the mission plans for Operation Alpha",
      "data_classification": "secret",
      "mission_phase": "pre_deployment",
      "time_period": "working_hours",
      "user_clearance": "confidential",
      "expected_result": "allowed",
      "expected_reason": "Access granted: user has sufficient clearance during working hours",
      "contradiction_type": "none",
      "description": "User has clearance and time allows access"
    },
    {
      "scenario": "commander_override_weekend",
      "user": "commander",
      "query": "Access Project Zeus coordinates immediately",
      "data_classification": "confidential",
      "mission_phase": "pre_deployment",
      "time_period": "weekend",
      "user_clearance": "confidential",
      "expected_result": "allowed",
      "expected_reason": "Access granted: commander override permissions",
      "contradiction_type": "override",
      "description": "Commander override bypasses weekend restrictions"
    },
    {
      "scenario": "emergency_phase_override",
      "user": "user456",
      "query": "Emergency access to confidential data",
      "data_classification": "confidential",
      "mission_phase": "emergency",
      "time_period": "off_hours",
      "user_clearance": "secret",
      "expected_result": "allowed",
      "expected_reason": "Access granted: emergency phase overrides all restrictions",
      "contradiction_type": "emergency_override",
      "description": "Emergency phase overrides time and clearance restrictions"
    },
    {
      "scenario": "insufficient_clearance",
      "user": "user456",
      "query": "Show confidential Project Zeus data",
      "data_classification": "confidential",
      "mission_phase": "pre_deployment",
