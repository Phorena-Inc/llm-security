# Example .env for temporal-framework

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# Graphiti Configuration
GRAPHITI_SERVER_URL=https://your-graphiti-server.com
GRAPHITI_API_KEY=your_api_key

# Logging / Audit
LOG_LEVEL=INFO
# Enable audit enqueueing (true/false)
ENABLE_AUDIT=true
# Audit sampling rate in [0.0, 1.0] (1.0 = all events, 0.0 = none)
AUDIT_SAMPLE_RATE=1.0
# Enable Prometheus metrics exposure (true/false)
ENABLE_METRICS=false
SECURITY_LOG_ENABLED=true

# Application Settings
EMERGENCY_OVERRIDE_ENABLED=true
DEFAULT_TIMEZONE=UTC
MAX_CONTEXT_AGE_HOURS=24
